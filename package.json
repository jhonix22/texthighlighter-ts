{
  "name": "@scaleleap/typescript-template",
  "version": "0.0.0",
  "description": "TypeScript Project Template",
  "license": "MIT",
  "author": {
    "name": "Roman Filippov",
    "email": "roman@scaleleap.com",
    "url": "https://www.scaleleap.com/"
  },
  "homepage": "https://github.com/ScaleLeap/typescript-template",
  "repository": {
    "type": "git",
    "url": "git@github.com:ScaleLeap/typescript-template.git"
  },
  "bugs": {
    "url": "https://github.com/ScaleLeap/typescript-template/issues"
  },
  "main": "lib/index.js",
  "files": [
    "/lib"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --build tsconfig.build.json",
    "clean": "rimraf lib/*",
    "dev": "ts-node-dev --respawn --transpileOnly src",
    "lint": "eslint --ext ts,js src/ test/",
    "lint:fix": "npm run lint -- --fix",
    "semantic-release": "npx @scaleleap/semantic-release-config",
    "start": "ts-node --transpile-only --pretty src",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@scaleleap/utils": "1.9.44",
    "@types/jest": "26.0.23",
    "@types/node": "14.17.4",
    "danger": "10.6.6",
    "jest": "27.0.6",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.3",
    "ts-node": "10.1.0",
    "ts-node-dev": "1.1.8",
    "tsconfigs": "4.0.2",
    "typescript": "4.3.5"
  },
  "keywords": [
    "template",
    "typescript"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}
